@{
    ViewData["Title"] = "Journeys";
    @model IEnumerable<JourneyDTO>

}

@foreach (var item in Model.OrderBy(x=> x.Departure))
{
    <div class="row mt-2">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-8">
                        <div class="row" style="font-size:12pt;">
                            <div class="col-5">
                                Kalkış
                                <br />
                                @item.Departure.ToShortTimeString()
                            </div>
                            <div class="col-2 d-flex justify-content-center align-items-center">
                                <i class="fas fa-arrow-right"></i>
                            </div>
                            <div class="col-5">
                                Varış
                                <br />
                                @item.Arrival.ToShortTimeString()
                            </div>
                        </div>
                        <div class="row">
                            @item.Origin - @item.Destination
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="badge bg-danger" style="font-size:12pt;">
                            @item.Price @item.Currency
                        </div>
                       
                    </div>
                </div>

            </div>
        </div>
    </div>
}
